<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Burgers!</h1>
        </div>
    </div>

    <h2>Add a Burger</h2>

    <form class="create-form">
        <div class="form-group">
            <label for="bur">Burger:</label>
            <input id="input_burger" type="text" id="bur" name="name">

            <!--<div class="input-field col s12">-->
            <!---->
            <!--</div>-->

        </div>

        <div class="form-group">
            <label>Select if Devoured or not?</label>
            <select class="browser-default">
                <option value="" selected>Options</option>
                <option value="1">Not Devoured</option>
                <option value="0">Devoured</option>
            </select>
            <!--<label for="devour">Devoured?:</label><br>-->
            <!--<input type="radio" name="devoured" value="1" checked> Not Devoured!<br>-->
            <!--<input type="radio" name="devoured" value="0"> Devoured-->
        </div>

        <a class="waves-effect waves-light btn"><i class="material-icons right">view_agenda</i>Add Burgeer</a>
    </form>


    <div class="row toprow">
        <div class="col-md-6">
            <h2 class="center-align">Burgers that have devoured!</h2>

            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-6">
            <h2 class="burgertitle">Burgers that have not been devoured!</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>



</div>