<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Burgers!</h1>
        </div>
    </div>
    <div class="row toprow">
        <div class="col-md-6">
            <h2 class="burgertitle">Burgers that have devoured!</h2>

            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-6">
            <h2 class="burgertitle">Burgers that have not been devoured!</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

            <h2>Add a Burger</h2>


            <form class="create-form">
                <div class="form-group">
                    <label for="bur">Burger:</label>
                    <input type="text" id="bur" name="name">
                </div>

                <div class="form-group">
                    <label for="devour">Devoured?:</label><br>
                    <input type="radio" name="devoured" value="1" checked> Not Devoured!<br>
                    <input type="radio" name="devoured" value="0"> Devoured
                </div>

                <button type="submit">Add Burger</button>
            </form>

</div>